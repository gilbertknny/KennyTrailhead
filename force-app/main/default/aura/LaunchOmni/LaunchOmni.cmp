<aura:component implements="lightning:actionOverride,force:hasRecordId,lightning:isUrlAddressable,flexipage:availableForAllPageTypes" access="global">
    
    <lightning:navigation aura:id="navService"/>
    <lightning:workspaceAPI aura:id="workspace" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-is-relative" style="height:100vh; background:white;">
        <lightning:spinner alternativeText="Redirecting..." size="large" variant="brand" />
        <div class="slds-align_absolute-center" style="height: 100%;">
            <p class="slds-text-heading_medium">Please wait to launch Account Registration</p>
        </div>
    </div>
</aura:component>