<aura:component implements="lightning:availableForFlowActions,force:lightningQuickActionWithoutHeader,lightning:availableForFlowScreens,flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="loaded" type="boolean" default="false"/>
    <aura:attribute name="info" type="string" default="PLEASE WAIT TO LOGIN SPROUT SOCIAL SALESFORCE..."/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:workspaceAPI aura:id="workspace" />
    <div style="width:100%;">
        <aura:if isTrue="{!v.loaded}">
            <lightning:spinner alternativeText="Loading" variant="brand" class="spins" size="large" />
        </aura:if>
        <div>
        	{!v.info}
        </div>
    </div>
</aura:component>