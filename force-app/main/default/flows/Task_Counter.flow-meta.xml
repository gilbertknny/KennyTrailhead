    <assignments>
        <name>Count_Task</name>
        <label>Count Task</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>CountTask</assignToReference>
            <operator>AssignCount</operator>
            <value>
                <elementReference>Get_Related_Lead_Tasks</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Has_3_or_More_Tasks</targetReference>
        </connector>
    </assignments>
    <decisions>
        <name>Cek_if_task_completed_or_not</name>
        <label>Cek if task completed or not</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Update_Lead_Status_to_Completed</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Status_is_New</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Leads_Object.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>New</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.TaskSubtype</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Call</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Lead_Status</targetReference>
            </connector>
            <label>Status is New</label>
        </rules>
    </decisions>
    <decisions>
        <name>Has_3_or_More_Tasks</name>
        <label>Has 3 or More Tasks?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Get_Leads_Object</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No, Less Than 3 Tasks</defaultConnectorLabel>
        <rules>
            <name>Yes_3_Tasks</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>CountTask</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>3.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Lead_Checkbox</targetReference>
            </connector>
            <label>Yes, 3+ Tasks</label>
        </rules>
    </decisions>
    <description>Add automation for changing status if the lead has task 
add automation to contacted if task completed</description>
    <environments>Default</environments>
    <interviewLabel>Task Counter {!$Flow.CurrentDateTime}</interviewLabel>
