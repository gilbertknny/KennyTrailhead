        <dataType>String</dataType>
        <expression>BLANKVALUE({!$Record.BranchId__c},{!$Record.Account.BranchId_formula__c})</expression>
    </formulas>
    <formulas>
        <name>FormulaGetBranchName</name>
        <dataType>String</dataType>
        <expression>{!$Record.Owner.BranchName__c}</expression>
    </formulas>
    <interviewLabel>[Tgr] Set Branch ID After New Opportunity {!$Flow.CurrentDateTime}</interviewLabel>
