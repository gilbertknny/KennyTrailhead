    <recordUpdates>
        <name>Set_Branch_ID_Name</name>
        <label>Set Branch ID &amp; Name</label>
        <locationX>176</locationX>
        <locationY>431</locationY>
        <inputAssignments>
            <field>BranchId__c</field>
            <value>
                <elementReference>FormulaGetBranchID</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Branch_Name__c</field>
            <value>
                <elementReference>get_Cabang.Nama_Cabang__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>get_Cabang</targetReference>
        </connector>
        <object>Opportunity</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
