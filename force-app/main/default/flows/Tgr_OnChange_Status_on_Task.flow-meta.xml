    <decisions>
        <name>cek_sudah_pernah_complete</name>
        <label>cek sudah pernah complete?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>set_recordId_Task</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Belum</defaultConnectorLabel>
        <rules>
            <name>Sudah</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Completed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Open</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Error_Complete</targetReference>
            </connector>
            <label>Sudah</label>
        </rules>
    </decisions>
    <decisions>
        <name>Check_Notes</name>
