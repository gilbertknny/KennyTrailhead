    RIGHT(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c}), 3),
    IF(
        LEN(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c})) &gt; 12,
        LEFT(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c}), LEN(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c})) - 12) &amp; &quot;.&quot; &amp;
