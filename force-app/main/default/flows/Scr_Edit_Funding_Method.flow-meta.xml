        MID(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c}), LEN(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c})) - 8, 3) &amp; &quot;.&quot; &amp;
        MID(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c}), LEN(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c})) - 5, 3) &amp; &quot;.&quot; &amp;
        RIGHT(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c}), 3),
        IF(
            LEN(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c})) &gt; 9,
            LEFT(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c}), LEN(TEXT({!Get_Loan_Calculation_Result.total_down_payment_amount__c})) - 9) &amp; &quot;.&quot; &amp;
