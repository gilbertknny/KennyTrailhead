    <formulas>
        <name>getStatusResponse</name>
        <dataType>Number</dataType>
        <expression>VALUE(
 MID(
   {!Call_Vlocity_Bridge.resultJson},
   FIND(&apos;&quot;status&quot;:&quot;&apos;, {!Call_Vlocity_Bridge.resultJson}) + 10,
   FIND(&apos;&quot;&apos;, {!Call_Vlocity_Bridge.resultJson}, FIND(&apos;&quot;status&quot;:&quot;&apos;, {!Call_Vlocity_Bridge.resultJson}) + 10) - 
   (FIND(&apos;&quot;status&quot;:&quot;&apos;, {!Call_Vlocity_Bridge.resultJson}) + 10)
 )
)</expression>
        <scale>0</scale>
    </formulas>
