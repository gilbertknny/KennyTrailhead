<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Search BRIMO Onboarding</masterLabel>

    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <!--<target>lightning__Tab</target>-->
        <!--<target>lightning__RecordAction</target>-->
        <!--<target>lightning__Inbox</target>-->
        <!--<target>lightning__UtilityBar</target>-->
        <target>lightning__FlowScreen</target>
        <!--<target>lightningSnapin__ChatMessage</target>-->
        <!--<target>lightningSnapin__Minimized</target>-->
        <!--<target>lightningSnapin__PreChat</target>-->
        <!--<target>lightningSnapin__ChatHeader</target>-->
        <!--<target>lightningCommunity__Page</target>-->
        <!--<target>lightningCommunity__Default</target>-->
        <!--<target>lightningCommunity__Page_Layout</target>-->
        <!--<target>lightningCommunity__Theme_Layout</target>-->
    </targets>

    <targetConfigs>
        <!-- Record Page: auto mode -->
        <targetConfig targets="lightning__RecordPage">
            <property
                name="useRecordContext"
                type="Boolean"
                default="true"
                label="Use Record Context (auto mode)" />
            <property
                name="recordNikFieldApiName"
                type="String"
                label="Record NIK Field API Name"
                description="e.g., Case.NIK__c" />
            <property
                name="autoRunOnLoad"
                type="Boolean"
                default="true"
                label="Auto-run on Load" />
            <property
                name="hideSearchInRecordMode"
                type="Boolean"
                default="true"
                label="Hide Search UI in Record Mode" />
            <property
                name="presetNik"
                type="String"
                label="Preset NIK (optional)"
                description="If provided by a parent/Flow, component will skip reading from the record." />
        </targetConfig>

        <!-- Home/App Page: manual mode -->
        <targetConfig targets="lightning__HomePage,lightning__AppPage">
            <property
                name="useRecordContext"
                type="Boolean"
                default="false"
                label="Use Record Context (auto mode)" />
            <property
                name="presetNik"
                type="String"
                label="Preset NIK (optional)" />
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>