<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>KR Modules Grid</masterLabel>

    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>

    <targetConfigs>
        <!-- Lightning (App/Home/Record) -->
        <targetConfig targets="lightning__AppPage, lightning__HomePage, lightning__RecordPage">
            <property name="sourceMode" type="String" label="Data Source" datasource="apex,mock"
                default="apex" />
            <property name="simulate" type="String" label="Simulate State"
                datasource="none,empty,error" default="none" />
            <property name="mockCount" type="String" label="Mock: Item Count" default="30" />
            <property name="mockDelay" type="String" label="Mock: Delay (ms)" default="600" />
            <property name="homeNamedPage" type="String" label="Community Home Named Page"
                default="Home" />
            <property name="homeUrl" type="String" label="Override Home URL (optional)" />
        </targetConfig>

        <!-- Experience Builder default target (supports properties) -->
        <targetConfig targets="lightningCommunity__Default">
            <property name="sourceMode" type="String" label="Data Source" datasource="apex,mock"
                default="apex" />
            <property name="simulate" type="String" label="Simulate State"
                datasource="none,empty,error" default="none" />
            <property name="mockCount" type="Number" label="Mock: Item Count" default="30" />
            <property name="mockDelay" type="Number" label="Mock: Delay (ms)" default="600" />
            <property name="homeNamedPage" type="String" label="Community Home Named Page"
                default="Home" />
            <property name="homeUrl" type="String" label="Override Home URL (optional)" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>