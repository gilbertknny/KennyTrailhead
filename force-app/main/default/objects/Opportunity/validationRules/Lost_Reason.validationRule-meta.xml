<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lost_Reason</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISBLANK(TEXT(Lost_Reason__c)), ISPICKVAL( StageName , &quot;Closed Lost&quot;))</errorConditionFormula>
    <errorDisplayField>Lost_Reason__c</errorDisplayField>
    <errorMessage>Lost Reason field requires a value when the stage is Closed Lost</errorMessage>
</ValidationRule>
