<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Name_Min_3_Character</fullName>
    <active>true</active>
    <errorConditionFormula>IF(ISBLANK( LastName), FALSE, LEN(LastName) &lt; 3)</errorConditionFormula>
    <errorDisplayField>LastName</errorDisplayField>
    <errorMessage>Please enter at least 3 character</errorMessage>
</ValidationRule>
