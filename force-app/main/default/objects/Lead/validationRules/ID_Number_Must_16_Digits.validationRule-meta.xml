<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ID_Number_Must_16_Digits</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Customer_Type__c , &quot;Personal&quot;) , NOT(REGEX( ID_Number__c , &quot;^[0-9]{16}$&quot;)))</errorConditionFormula>
    <errorDisplayField>ID_Number__c</errorDisplayField>
    <errorMessage>ID Number must be 16 digits</errorMessage>
</ValidationRule>
