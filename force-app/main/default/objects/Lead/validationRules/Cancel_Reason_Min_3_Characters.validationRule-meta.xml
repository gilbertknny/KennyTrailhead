<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cancel_Reason_Min_3_Characters</fullName>
    <active>true</active>
    <description>Rule ketika status diubah ke canceled</description>
    <errorConditionFormula>AND( ISPICKVAL(Status, &quot;Canceled&quot;), OR(ISBLANK(Cancel_Reason__c), LEN(Cancel_Reason__c) &lt; 3 ) )</errorConditionFormula>
    <errorDisplayField>Cancel_Reason__c</errorDisplayField>
    <errorMessage>Please enter at least 3 character</errorMessage>
</ValidationRule>
