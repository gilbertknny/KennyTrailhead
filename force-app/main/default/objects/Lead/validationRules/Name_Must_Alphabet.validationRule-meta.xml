<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Name_Must_Alphabet</fullName>
    <active>true</active>
    <errorConditionFormula>OR(NOT(REGEX(  LastName , &quot;^[a-zA-Z ]*$&quot;)))</errorConditionFormula>
    <errorDisplayField>LastName</errorDisplayField>
    <errorMessage>Some character are not allowed, for example / \ :*?&quot;&lt;&gt;|</errorMessage>
</ValidationRule>
