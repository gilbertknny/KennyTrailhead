<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ID_Number_Must_16_Digits</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    RecordType.DeveloperName = &quot;Personal&quot;,
    NOT(ISBLANK(ID_Number__c)),
    NOT(REGEX(ID_Number__c, &quot;^[0-9]{16}$&quot;))
)</errorConditionFormula>
    <errorDisplayField>ID_Number__c</errorDisplayField>
    <errorMessage>Please input 16 digit number only.</errorMessage>
</ValidationRule>
