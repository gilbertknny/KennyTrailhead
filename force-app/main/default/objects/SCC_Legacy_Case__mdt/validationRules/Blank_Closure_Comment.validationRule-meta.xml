<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Blank_Closure_Comment</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(ISBLANK( Closure_Comment__c )) , TEXT( Status__c )!=&apos;Closed&apos; )</errorConditionFormula>
    <errorDisplayField>Closure_Comment__c</errorDisplayField>
    <errorMessage>Closure Comment / Komentar penutupan harus dibiarkan kosong !</errorMessage>
</ValidationRule>
