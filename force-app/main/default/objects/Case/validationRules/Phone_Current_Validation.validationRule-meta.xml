<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Current_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK( Cust_Current_Phone__c )),
NOT(REGEX(Cust_Current_Phone__c, &quot;^[0-9]{9,14}$&quot;))
)</errorConditionFormula>
    <errorDisplayField>Cust_Current_Phone__c</errorDisplayField>
    <errorMessage>Harap isi dengan 9-14 digit angka !</errorMessage>
</ValidationRule>
