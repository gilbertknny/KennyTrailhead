<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Related_Account_Validation</fullName>
    <active>true</active>
    <description>Rrelated account cannot be updated</description>
    <errorConditionFormula>AND(ISCHANGED( AccountId ), NOT(ISBLANK(PRIORVALUE( AccountId ))))</errorConditionFormula>
    <errorDisplayField>AccountId</errorDisplayField>
    <errorMessage>Anda tidak dapat mengubah data di Account !</errorMessage>
</ValidationRule>
