<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Legal_Zip_Code_Must_Numeric</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(  Legal_Zip_Code__c  , &quot;^[0-9]*$$&quot;))</errorConditionFormula>
    <errorDisplayField>Legal_Zip_Code__c</errorDisplayField>
    <errorMessage>Alphabet and Special character are not allowed, for example / \ :*?&quot;&lt;&gt;|</errorMessage>
</ValidationRule>
