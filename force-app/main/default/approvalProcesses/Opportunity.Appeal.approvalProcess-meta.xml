<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_Approve_Final</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Unset_Reject_Final</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>amin.nurahman@bfi.co.id</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Exp_Value__c</field>
                <operation>lessOrEqual</operation>
                <value>2000000000</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Appeal Exp &lt;= 2M</label>
        <name>Appeal_Exp_LTE_2M</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.Exp_Value__c</field>
                <operation>lessOrEqual</operation>
                <value>5000000000</value>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Exp_Value__c</field>
                <operation>greaterThan</operation>
                <value>2000000000</value>
            </criteriaItems>
        </entryCriteria>
        <label>Appeal Exp &lt;= 5M</label>
        <name>Appeal_Exp_LTE_5M</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Opportunity: Is_Reject_Final = True</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.Is_Reject_Final__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>UnlockRecord</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>UnlockRecord</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>LockRecord</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Appeal</label>
    <processOrder>4</processOrder>
    <recallActions>
        <action>
            <name>UnlockRecord</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
